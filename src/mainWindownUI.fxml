<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <Pane fx:id="container" style="-fx-background-color:#222;" BorderPane.alignment="CENTER">
            <Canvas fx:id="canvas" />
        </Pane>
    </center>
    <top>
        <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <items>
                <ChoiceBox fx:id="chbMode" prefWidth="80.0">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Pen"/>
                            <String fx:value="Bucket"/>
                        </FXCollections>
                    </items>
                </ChoiceBox>
                <Pane fx:id="paneColor" prefWidth="30.0" prefHeight="30.0" />
                <Pane fx:id="panePicker" prefHeight="30.0" />
                <Separator orientation="VERTICAL" />
                <Pane HBox.hgrow="ALWAYS" />

                <Button fx:id="btnSave" text="Save" />
                <Button fx:id="btnLoad" text="Load" />

                <Button fx:id="btnClear" text="Clear" />
            </items>
        </ToolBar>
    </top>
    <right>
        <VBox prefWidth="200.0">
            <TextArea fx:id="areaMsg" wrapText="true" VBox.vgrow="ALWAYS" />
            <HBox>
                <TextField fx:id="txtMsg" />
                <Button fx:id="btnSend" text="Send" />
            </HBox>
        </VBox>
    </right>
</BorderPane>
